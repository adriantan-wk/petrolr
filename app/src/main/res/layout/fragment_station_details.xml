<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/window_white_foggy"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/stationImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="Name" />

        <TextView
            style="@style/ListHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/brand"
            android:textAlignment="center" />

        <View
            style="@style/ListSeparator"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/brandTextView"
            style="@style/StationDetailsBodyBlock"
            android:textAlignment="center" />

        <TextView
            style="@style/ListHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/petrol_types_available"
            android:textAlignment="center" />

        <View
            style="@style/ListSeparator"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/petrolTypesTextView"
            style="@style/StationDetailsBodyBlock"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>