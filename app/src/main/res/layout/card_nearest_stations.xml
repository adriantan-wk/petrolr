<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="125dp"
    android:layout_height="125dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="25dp"
    app:cardBackgroundColor="@color/colorWhiteFoggy"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/nearestStationLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            tools:src="@drawable/ic_shell" />

        <TextView
            android:id="@+id/nearestStationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Station 1" />

        <TextView
            android:id="@+id/nearestStationDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="16.5" />

        <TextView
            android:id="@+id/nearestStationDistanceUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance_km_away"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>